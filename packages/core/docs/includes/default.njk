<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <link rel="icon" type="image/svg+xml" href="/vite.svg" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Jebamo</title>
  <link rel="stylesheet" href="/build/jebamo/styles/core.css" />
  <link rel="stylesheet" href="/build/jebamo/styles/classes.css" />
  <script type="module" src="/build/jebamo/dist/esm/jebamo.js"></script>
  <style>
  @import url("https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200");
  @import url("https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap");

  :root {
    font-family: "Work Sans";
    font-size: 16px;
    line-height: 1.75;
    font-weight: var(--je-font-regular);
  }

  body {
    color-scheme: light dark;
  }

  body.light {
    color-scheme: light;
  }

  body.dark {
    color-scheme: dark;
  }

  html,
  body {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin-block-start: 0;
    margin-block-end: 0;
    margin-inline-start: 0;
    margin-inline-end: 0;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: var(--je-font-bold);
  }

  h2 {
    font-size: 2rem;
    font-weight: var(--je-font-bold);
  }

  h3 {
    font-size: 1.75rem;
    font-weight: var(--je-font-bold);
  }

  h4 {
    font-size: 1.5rem;
    font-weight: var(--je-font-bold);
  }

  h5 {
    font-size: 1.25rem;
    font-weight: var(--je-font-bold);
  }

  h6 {
    font-size: 1rem;
    font-weight: var(--je-font-bold);
  }

  p {
    font-size: 1rem;
    font-weight: var(--je-font-regular);
  }

  small {
    font-size: 0.875rem;
    font-weight: var(--je-font-light);
  }
  </style>
</head>

<body>
  <je-page>
    <header>
      <je-nav>
        <h1>Jebamo</h1>
        <je-link class="active" href="#" slot="end">Components</je-link>
        <je-link href="#" slot="end">Tutorials</je-link>
        <je-link href="#" slot="end">Changelog</je-link>
        <je-button slot="end" onclick="document.body.classList.toggle('dark'); document.body.classList.toggle('light')">
          <je-icon fill>dark_mode</je-icon>
        </je-button>
      </je-nav>
    </header>
    <aside class="je-padding-horizontal-xs je-padding-vertical" style="width: 250px;">
      <nav>
				<je-tree value="{{ page.url }}">
					{% for item in collections.navigation | navToArray %}
						<je-branch value="{{ item.url }}" label="{{ item.title }}" href="{{ item.url }}"></je-branch>
					{% endfor %}
				</je-tree>
			</nav>
    </aside>
    <main>
      {% block content %}
        {{ content | safe }}
      {% endblock %}
    </main>
    <aside><p>test</p></aside>
    <footer>
      <small>yo.....</small>
    </footer>
  </je-page>
</body>

</html>
