  <title>Vite + TS</title>
  <link rel="stylesheet" href="jebamo/styles/variables.css" />
  <link rel="stylesheet" href="jebamo/styles/classes.css" />
  <script type="module" src="jebamo/dist/esm/jebamo.js"></script>
  <style>
  @import url("https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200");
  @import url("https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100..900;1,100..900&display=swap");

  :root {
    font-family: "Work Sans";
    font-size: 16px;
    line-height: 1.75;
    font-weight: var(--je-font-regular);
  }

  body.light {
    color-scheme: light;
  }

  body.dark {
    color-scheme: dark;
  }

  body.system {
    color-scheme: light dark;
  }

  html,
  body {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    margin: 0;
    padding: 0;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p {
    margin-block-start: 0;
    margin-block-end: 0;
    margin-inline-start: 0;
    margin-inline-end: 0;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: var(--je-font-bold);
  }

  h2 {
    font-size: 2rem;
    font-weight: var(--je-font-bold);
  }

  h3 {
    font-size: 1.75rem;
    font-weight: var(--je-font-bold);
  }

  h4 {
    font-size: 1.5rem;
    font-weight: var(--je-font-bold);
  }

  h5 {
    font-size: 1.25rem;
    font-weight: var(--je-font-bold);
  }

  h6 {
    font-size: 1rem;
    font-weight: var(--je-font-bold);
  }

  p {
    font-size: 1rem;
    font-weight: var(--je-font-regular);
  }

  small {
    font-size: 0.875rem;
    font-weight: var(--je-font-light);
  }
  </style>
</head>

