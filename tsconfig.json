{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": [
      "DOM",
      "ESNext",
      "dom.iterable"
    ],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "jsx": "react",
    "jsxFactory": "h",
    //"strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}